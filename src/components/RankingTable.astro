---
import casasData from '../data/casas-apuestas.json';

const casas = casasData.sort((a, b) => a.posicion - b.posicion);
---

<section class="ranking" id="ranking">
  <div class="container">
    <div class="section-header">
      <h1 class="section-title">Ranking de Casas de Apuestas</h1>
      <p class="section-subtitle">
        Seleccionamos solo plataformas con licencia oficial de la DGOJ.
        Haz clic en el botón para registrarte directamente.
      </p>
    </div>

    <div class="ranking-list">
      {casas.map((casa) => (
        <article class="ranking-card">
          <div class="ranking-position">
            <span class="position-number">#{casa.posicion}</span>
          </div>

          <div class="ranking-logo">
            <img
              src={casa.imagen}
              alt={`Logo de ${casa.nombre}`}
              width="120"
              height="60"
              loading="lazy"
              onerror="this.style.display='none';this.parentElement.innerHTML=`<div class='logo-placeholder'>${casa.nombre.charAt(0)}</div>`"
            />
          </div>

          <div class="ranking-info">
            <h3 class="ranking-name">{casa.nombre}</h3>
            <p class="ranking-desc">{casa.descripcion}</p>
          </div>

          <div class="ranking-action">
            <a
              href={casa.urlRegistro}
              target="_blank"
              rel="nofollow sponsored noopener"
              class="ranking-btn"
            >
              {casa.textoBoton}
            </a>
            <span class="ranking-legal">+18 | Juega con responsabilidad</span>
          </div>
        </article>
      ))}
    </div>

    <div class="ranking-disclaimer">
      <p>
        Todas las casas de apuestas listadas operan con licencia de la
        <strong>Dirección General de Ordenación del Juego (DGOJ)</strong>.
        Los enlaces de registro son proporcionados por los operadores.
        <a href="https://legalzone.es" target="_blank" rel="noopener">Más información en LegalZone.es</a>.
      </p>
    </div>
  </div>
</section>

<style>
  .ranking {
    padding: 80px 0;
    background: #0d0d0d;
  }

  .section-header {
    text-align: center;
    margin-bottom: 48px;
  }

  .section-title {
    font-size: clamp(26px, 4vw, 40px);
    font-weight: 800;
    margin-bottom: 12px;
    background: linear-gradient(135deg, #ffffff, #d4a853);
    -webkit-background-clip: text;
    -webkit-text-fill-color: transparent;
    background-clip: text;
  }

  .section-subtitle {
    font-size: 17px;
    color: #888;
    max-width: 550px;
    margin: 0 auto;
  }

  .ranking-list {
    display: flex;
    flex-direction: column;
    gap: 16px;
  }

  .ranking-card {
    display: grid;
    grid-template-columns: 70px 140px 1fr auto;
    align-items: center;
    gap: 24px;
    background: linear-gradient(135deg, rgba(26, 26, 26, 0.9), rgba(30, 30, 30, 0.9));
    border: 1px solid rgba(212, 168, 83, 0.12);
    border-radius: 12px;
    padding: 24px;
    transition: border-color 0.3s, transform 0.2s;
  }

  .ranking-card:hover {
    border-color: rgba(212, 168, 83, 0.35);
    transform: translateY(-2px);
  }

  .ranking-card:first-child {
    border-color: rgba(212, 168, 83, 0.4);
    background: linear-gradient(135deg, rgba(26, 122, 46, 0.08), rgba(30, 30, 30, 0.9));
  }

  .ranking-position {
    display: flex;
    align-items: center;
    justify-content: center;
  }

  .position-number {
    font-size: 28px;
    font-weight: 900;
    color: #d4a853;
  }

  .ranking-card:first-child .position-number {
    font-size: 32px;
    background: linear-gradient(135deg, #d4a853, #f0d78c);
    -webkit-background-clip: text;
    -webkit-text-fill-color: transparent;
    background-clip: text;
  }

  .ranking-logo {
    display: flex;
    align-items: center;
    justify-content: center;
    background: rgb(66 66 66 / 8%);
    border-radius: 8px;
    padding: 12px;
    min-height: 70px;
  }

  .ranking-logo img {
    max-height: 50px;
    width: auto;
    object-fit: contain;
    filter: brightness(0) saturate(100%) invert(100%) sepia(0%) saturate(7470%) hue-rotate(113deg) brightness(99%) contrast(103%); Copy

  }

  .ranking-info {
    min-width: 0;
  }

  .ranking-name {
    font-size: 20px;
    font-weight: 700;
    color: #fff;
    margin-bottom: 6px;
  }

  .ranking-desc {
    font-size: 14px;
    color: #999;
    line-height: 1.5;
  }

  .ranking-action {
    display: flex;
    flex-direction: column;
    align-items: center;
    gap: 8px;
    flex-shrink: 0;
  }

  .ranking-btn {
    display: inline-flex;
    align-items: center;
    justify-content: center;
    background: linear-gradient(135deg, #1a7a2e, #2ecc71);
    color: #fff;
    font-size: 15px;
    font-weight: 700;
    padding: 12px 28px;
    border-radius: 8px;
    white-space: nowrap;
    transition: transform 0.2s, box-shadow 0.2s;
    box-shadow: 0 2px 12px rgba(46, 204, 113, 0.2);
  }

  .ranking-btn:hover {
    transform: translateY(-2px);
    box-shadow: 0 4px 20px rgba(46, 204, 113, 0.4);
  }

  .ranking-legal {
    font-size: 11px;
    color: #666;
  }

  .ranking-disclaimer {
    margin-top: 40px;
    padding: 20px;
    background: rgba(255, 255, 255, 0.03);
    border-radius: 8px;
    border: 1px solid rgba(255, 255, 255, 0.06);
  }

  .ranking-disclaimer p {
    font-size: 13px;
    color: #777;
    text-align: center;
    line-height: 1.6;
  }

  .ranking-disclaimer a {
    color: #2ecc71;
    text-decoration: underline;
  }

  @media (max-width: 900px) {
    .ranking-card {
      grid-template-columns: 50px 100px 1fr;
      gap: 16px;
    }

    .ranking-action {
      grid-column: 1 / -1;
    }

    .ranking-btn {
      width: 100%;
    }
  }

  @media (max-width: 520px) {
    .ranking-card {
      grid-template-columns: 1fr;
      text-align: center;
      padding: 20px;
      gap: 12px;
    }

    .ranking-logo {
      justify-self: center;
      width: 140px;
    }

    .ranking-position {
      justify-self: center;
    }
  }
</style>
